{
  "config_id": "user_config",

  "mode": {
    "default_mode": "api",

    "api": {
      "default_provider": "gemini",

      "openai": {
        "model": "gpt-4",
        "base_url": "https://api.openai.com/v1",
        "embedding_url": "https://api.openai.com/v1/embeddings",
        "audio_url": "https://api.openai.com/v1/audio"
      },

      "gemini": {
        "model": "gemini-2.0-flash",
        "base_url": "https://generativelanguage.googleapis.com/v1beta/openai/",
        "embedding_url": "https://generativelanguage.googleapis.com/v1beta/embeddings/",
        "audio_url": "https://generativelanguage.googleapis.com/v1beta/audio/"
      }
    },

    "local": {
      "portus": {
        "model": null
      }
    }
  },

  "parameters": {
    "system_prompt": "You are a helpful assistant.",

    "global": {
      "temperature": 0.7,
      "top_p": 1,
      "max_tokens": 10240,
      "stream": true,
      "tools": [],
      "tool_choice": "auto",
      "response_format": "text",
      "stop": null
    },

    "openai": {
      "top_k": 40,
      "presence_penalty": 0.2,
      "frequency_penalty": 0.2
    }
  }
}
